<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_marginVertical="5dp"
    android:layout_marginHorizontal="20dp"
    android:backgroundTint="@color/white"
    android:background="@drawable/round_rect_shape"
    >
    <RelativeLayout
        android:id="@+id/rel1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <ImageView
            android:id="@+id/image_data_base"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:padding="1dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="0dp"
            android:foreground="@drawable/corner1"
            android:scaleType="centerCrop"
            tools:srcCompat="@tools:sample/avatars" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_image"
            android:layout_width="61dp"
            android:layout_height="49dp"
            android:src="@drawable/ic_baseline_account_circle_24" />


        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginHorizontal="70dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@+id/user_image"
            android:text="Soonershik"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:textColor="@color/grey"
            android:id="@+id/rating_bar_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/rating_bar"
            android:layout_alignBottom="@+id/rating_bar"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp"
            android:textSize="12dp"
            android:layout_marginBottom="0dp"
            android:layout_toEndOf="@+id/rating_bar"
            android:text="0.0"
            android:textStyle="bold" />

        <RatingBar
            android:id="@+id/rating_bar"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_alignStart="@+id/name"
            android:layout_marginStart="-1dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:isIndicator="true"
            android:progressTint="@color/Gold"
            android:secondaryProgressTint="@color/zxing_transparent" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/mid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel1"
        android:layout_marginTop="4dp">

        <TextView
            android:textColor="@color/black"
            android:id="@+id/comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="0dp"
            android:layout_marginTop="5dp"
            android:text="@string/comment"
            android:textSize="18dp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/translate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mid"
        android:layout_marginTop="9dp"
        android:text="@string/translate" />

    <RelativeLayout
        android:id="@+id/down1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/translate"
        android:layout_marginTop="8dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_toEndOf="@+id/time">

            <ImageButton
                android:id="@+id/like"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/zxing_transparent"
                android:src="@drawable/dislike"
                app:tint="@color/grey" />

            <TextView
                android:id="@+id/count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/like"
                android:layout_marginStart="-7dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/like"
                android:hint="0"
                android:textStyle="bold" />
        </RelativeLayout>

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Time"
            android:textColor="@color/grey"
            android:textSize="18dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/time"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="0dp"
            android:src="@drawable/ic_baseline_more_vert_24"
            app:tint="@color/grey" />

    </RelativeLayout>




</RelativeLayout>