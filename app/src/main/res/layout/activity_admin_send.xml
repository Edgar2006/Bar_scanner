<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Company.AdminSendActivity">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >


        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="145dp"
            android:background="@drawable/round_rect_shape"
            android:padding="20dp"
            android:text="@string/email_documents_proving_that_you_are_the_owner_or_employee_of_this_company"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <com.google.android.material.button.MaterialButton
            android:textColor="@color/white"
            app:cornerRadius="20dp"
            android:id="@+id/start_activity_read"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/textView3"
            android:layout_marginHorizontal="60dp"
            android:layout_marginTop="60dp"
            android:textSize="18dp"
            android:backgroundTint="@color/Base_color"
            android:onClick="onCLickSendEmail"
            android:text="@string/open_email"
            android:textAllCaps="false"
            android:textStyle="bold" />

    </RelativeLayout>

</ScrollView>