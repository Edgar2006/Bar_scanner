<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Company.Product_activityBioEdit">
    <RelativeLayout
        android:id="@+id/activity"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/product_name"
                style="@style/LoginTextInputLayoutStyle"
                android:layout_alignParentTop="true"
                android:layout_marginTop="50dp"
                android:hint="Product name"
                app:startIconDrawable="@drawable/u_user">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"

                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/bio"
                style="@style/LoginTextInputLayoutStyle"
                android:layout_below="@+id/product_name"
                android:layout_marginTop="40dp"
                android:hint="Description for product"
                app:startIconDrawable="@drawable/ic_baseline_menu_24">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>


            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/submit"
                android:layout_below="@+id/bio"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="40dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="40dp"
                android:onClick="onClickChooseImage"
                android:src="@drawable/ic_baseline_add_photo_alternate_24" />

            <Button
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_alignParentBottom="true"
                android:layout_marginHorizontal="@dimen/side"
                android:layout_marginBottom="33dp"
                android:backgroundTint="@color/Base_color"
                android:onClick="onClickSubmit"
                android:text="Save"
                android:textAllCaps="false"
                android:textSize="15dp"
                android:textStyle="bold" />

    </RelativeLayout>
    <ProgressBar
        android:id="@+id/progress_bar"
        android:indeterminate="true"
        android:indeterminateTintMode="src_atop"
        android:indeterminateTint="@color/Base_color"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foregroundTint="@color/Red"
        />

</RelativeLayout>