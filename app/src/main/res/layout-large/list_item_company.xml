<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:padding="10dp"
    android:background="@drawable/round_rect_shape">
    <TextView
        android:textSize="25sp"
        android:textStyle="bold"
        android:id="@+id/product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/product_name" />

    <RelativeLayout
        android:id="@+id/id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/one"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/barCodeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/barcode"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:textSize="25sp"
            android:id="@+id/barCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/barCodeText"
            android:text=""
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_name"
        android:layout_marginTop="19dp">

        <ImageView
            android:id="@+id/product_image_view"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="57dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:foreground="@drawable/corner"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_custom_star" />

        <ImageView
            android:id="@+id/image_data_base"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignStart="@+id/idk"
            android:layout_alignTop="@+id/idk"
            android:layout_alignEnd="@+id/idk"
            android:layout_alignBottom="@+id/idk"
            android:layout_toStartOf="@+id/idk"
            android:scaleType="centerCrop"
            android:scaleX="-1"/>

        <RelativeLayout
            android:layout_marginEnd="40dp"
            android:id="@+id/idk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/product_image_view">

            <RelativeLayout
                android:id="@+id/edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/round_rect"
                android:padding="2dp">

                <TextView
                    android:id="@id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/edit_product_info1"
                    android:textColor="@color/white"
                    android:textSize="40sp" />

                <ImageView
                    android:id="@+id/image_view"
                    android:layout_width="51dp"
                    android:layout_height="45dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="13dp"
                    android:src="@drawable/ic_baseline_edit_24" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/countView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edit"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/round_rect"
                android:padding="2dp">

                <TextView
                    android:id="@id/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="0dp"
                    android:text="@string/scan_count"
                    android:textColor="@color/white"
                    android:textSize="40sp" />

                <ImageView
                    android:layout_centerVertical="true"
                    android:id="@+id/imageView1"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginEnd="4dp"
                    android:layout_toStartOf="@+id/count"
                    android:src="@drawable/ic_baseline_emoji_people_24" />

                <TextView
                    android:layout_centerVertical="true"
                    android:id="@id/count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="3dp"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="40sp" />

            </RelativeLayout>




            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/countView"
                android:layout_alignStart="@+id/countView"
                android:layout_marginStart="0dp"
                android:layout_marginTop="10dp">

                <RatingBar
                    android:id="@+id/rating_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:isIndicator="true"
                    android:progressTint="@color/Gold"
                    android:secondaryProgressTint="@color/zxing_transparent" />

                <TextView
                    android:textSize="40sp"
                    android:id="@+id/rating_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@+id/rating_bar"
                    android:text="0.0"
                    android:textColor="@color/Gold" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>



</RelativeLayout>